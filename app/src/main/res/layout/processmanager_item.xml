<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

    <ImageView
        android:id="@+id/iv_processmanageritem_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_launcher"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_processmanageritem_icon"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_processmanageritem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机卫士"
            android:textColor="#000000"
            android:textSize="15sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_processmanageritem_memory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="占用内存:xxxMB"
                android:textColor="#000000"
                android:textSize="15sp"
                />
        </RelativeLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_processmanageritem_isselect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"></CheckBox>


</RelativeLayout>