<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
    >

    <ImageView
        android:id="@+id/iv_trffic_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_contact"
        />
    <!-- layout_toRightOf : 在那个控件的有方法 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/iv_trffic_icon"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_traffic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="微信"
            android:textColor="#000000"
            android:textSize="16sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_traffic_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上传100MB"
                android:textColor="#99000000"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_traffic_desc1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="下载:200G"
                android:textColor="#99000000"
                android:textSize="12sp"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>